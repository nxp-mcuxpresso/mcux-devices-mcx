config MCUX_HW_SOC_SERIES_MCX
    bool
    default y

config MCUX_HW_SOC_SINGLECORE_DEVICE
    bool
    default y

# device related

config MCUX_HW_DEVICE_ID_MCXE247
    bool

choice
    prompt "Device MCXE247 Part"
    config MCUX_HW_DEVICE_PART_MCXE247VLQ
    bool "MCXE247VLQ"
    select MCUX_HW_DEVICE_ID_MCXE247
    config MCUX_HW_DEVICE_PART_MCXE247VLL
    bool "MCXE247VLL"
    select MCUX_HW_DEVICE_ID_MCXE247
endchoice

config MCUX_HW_DEVICE_ID
    string
    default "MCXE247" if MCUX_HW_DEVICE_ID_MCXE247

config MCUX_HW_DEVICE_PART
    string
    default "MCXE247VLQ" if MCUX_HW_DEVICE_PART_MCXE247VLQ
    default "MCXE247VLL" if MCUX_HW_DEVICE_PART_MCXE247VLL

